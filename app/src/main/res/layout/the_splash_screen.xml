<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/theSplashScreen"
        android:background="@android:color/holo_orange_light">

        <ImageView
            style="@style/theSplashImages.Left"
            android:id="@+id/Bottom1"
            android:src="@drawable/family_younger_sister"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true" />

        <ImageView
            style="@style/theSplashImages.Left"
            android:id="@+id/Bottom2"
            android:src="@drawable/family_son"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_above="@id/Bottom1"/>

        <ImageView
            style="@style/theSplashImages.Left"
            android:id="@+id/TopCenter"
            android:src="@drawable/family_older_brother"
            android:layout_above="@id/Bottom2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true" />

        <ImageView
            style="@style/theSplashImages"
            android:id="@+id/CenterCenter"
            android:src="@drawable/family_grandfather"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="150dp"
            android:layout_toEndOf="@id/Bottom2"
            android:layout_toRightOf="@id/Bottom2"
            android:layout_marginLeft="150dp"/>

        <ImageView
            style="@style/theSplashImages"
            android:id="@+id/CenterRight"
            android:src="@drawable/family_grandmother"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="90dp"
            android:layout_toEndOf="@id/Bottom2"
            android:layout_toRightOf="@id/Bottom2"
            android:layout_above="@id/Bottom2"
            android:layout_marginLeft="90dp"/>

        <ImageView
            style="@style/theSplashImages"
            android:id="@+id/CenterRight2"
            android:src="@drawable/family_mother"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="110dp"
            android:layout_toEndOf="@id/Bottom2"
            android:layout_toRightOf="@id/Bottom2"
            android:layout_above="@id/Bottom1"
            android:layout_marginLeft="110dp"/>

        <ImageView
            style="@style/theSplashImages.Right"
            android:id="@+id/RightTop"
            android:layout_toEndOf="@id/TopCenter"
            android:layout_toRightOf="@id/TopCenter"
            android:layout_above="@id/Bottom2"
            android:src="@drawable/family_mother"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true" />

        <ImageView
            style="@style/theSplashImages.Right"
            android:id="@+id/RightCenter"
            android:layout_toEndOf="@id/CenterCenter"
            android:layout_toRightOf="@id/CenterCenter"
            android:layout_below="@id/RightTop"
            android:src="@drawable/family_older_sister"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true" />

        <ImageView
            style="@style/theSplashImages.Right"
            android:id="@+id/RightBottom"
            android:layout_toEndOf="@id/Bottom1"
            android:layout_toRightOf="@id/Bottom1"
            android:layout_below="@id/RightCenter"
            android:src="@drawable/family_older_brother"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true" />

        <ImageView
            style="@style/theSplashImages"
            android:id="@+id/CenterLeft2"
            android:src="@drawable/family_father"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="190dp"
            android:layout_toEndOf="@id/Bottom2"
            android:layout_toRightOf="@id/Bottom2"
            android:layout_above="@id/RightBottom"
            android:layout_marginLeft="190dp"/>

        <ImageView
            style="@style/theSplashImages"
            android:id="@+id/CenterLeft"
            android:src="@drawable/family_daughter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="210dp"
            android:layout_toEndOf="@id/Bottom2"
            android:layout_toRightOf="@id/Bottom2"
            android:layout_above="@id/RightCenter"
            android:layout_marginLeft="152dp"/>

        <Button
            android:id="@+id/startLearning"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_purple"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_centerInParent="true"
            android:shadowColor="@android:color/darker_gray"
            android:visibility="gone"
            android:text="Start Learning" />

    </RelativeLayout>